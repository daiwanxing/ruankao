    to { opacity: 1; transform: translateY(0); }
  }

  .result-header.correct {
    background: #dcfce7;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    color: #15803d;
    font-weight: 600;
  }

  .result-header.incorrect {
    background: #fee2e2;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    color: #b91c1c;
    font-weight: 600;
  }

  .result-icon {
    margin-right: 0.5rem;
  }

  .explanation-content {
    margin-top: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 8px;
    border-left: 3px solid var(--sl-color-accent);
    animation: slideDown 0.3s ease;
  }

  @keyframes slideDown {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .explanation-content p {
    margin: 0;
    line-height: 1.8;
    color: var(--sl-color-gray-2);
    font-size: 0.95rem;
  }

  .explanation-content strong {
    color: var(--sl-color-accent);
    font-weight: 600;
  }

  /* æš—é»‘æ¨¡å¼ */
  :global([data-theme='dark']) .option-item.correct {
    background: #14532d;
    border-left-color: #22c55e;
  }

  :global([data-theme='dark']) .option-item.incorrect {
    background: #7f1d1d;
    border-left-color: #ef4444;
  }

  :global([data-theme='dark']) .result-header.correct {
    background: #14532d;
