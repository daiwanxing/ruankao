        resultHeader.innerHTML = `<span class="result-icon">âŒ</span> <span class="result-text">å›ç­”é”™è¯¯ã€‚æ­£ç¡®ç­”æ¡ˆæ˜¯ ${correctAnswer}</span>`;
        resultHeader.className = 'result-header incorrect';
      }

      // æ˜¾ç¤ºè§£æ
      explanationContent.style.display = 'block';
