    border-left-color: var(--sl-color-accent);
  }

  .option-item.correct {
    background: #dcfce7;
    border-left-color: #22c55e;
  }

  .option-item.incorrect {
    background: #fee2e2;
    border-left-color: #ef4444;
  }

  .option-indicator {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: var(--sl-color-gray-5);
    color: var(--sl-color-white);
