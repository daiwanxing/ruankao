---
interface Props {
  questionId?: string;
  question: string;
  options: string[];
  answer: string;
  explanation?: string;
}

const { questionId: providedQuestionId, question, options, answer, explanation } = Astro.props;

// è‡ªåŠ¨ç”ŸæˆquestionIdï¼ˆå¦‚æœæœªæä¾›ï¼‰
const questionId = providedQuestionId || `q_${question.split('').reduce((acc, char) => {
  return ((acc << 5) - acc) + char.charCodeAt(0);
}, 0).toString(36)}`;

// ç”Ÿæˆç¼“å­˜ key
const storageKey = `exercise_${questionId}`;
---

<div class="exercise-box" data-question-id={questionId} data-correct-answer={answer} data-storage-key={storageKey}>
  <h4 class="question">{question}</h4>
  <ul class="options">
    {options.map((opt, index) => {
      const optionLetter = String.fromCharCode(65 + index);
      return (
        <li class="option-item" data-option={optionLetter}>
          <span class="option-indicator">{optionLetter}</span>
          <span class="option-text">{opt}</span>
        </li>
      );
    })}
  </ul>
  <div class="result-section" style="display: none;">
    <div class="result-header"></div>
    <div class="explanation-content" style="display: none;">
      {explanation && <p><strong>ğŸ“– è§£æï¼š</strong>{explanation}</p>}
    </div>
  </div>
</div>

<script>
  // è·å–æ‰€æœ‰ç»ƒä¹ æ¡†
  const exerciseBoxes = document.querySelectorAll('.exercise-box');

  exerciseBoxes.forEach(box => {
    const element = box as HTMLElement;
    const questionId = element.dataset.questionId;
    const correctAnswer = element.dataset.correctAnswer;
    const storageKey = element.dataset.storageKey;
    const options = element.querySelectorAll('.option-item');
    const resultSection = element.querySelector('.result-section') as HTMLElement;
    const resultHeader = element.querySelector('.result-header') as HTMLElement;
    const explanationContent = element.querySelector('.explanation-content') as HTMLElement;

    // ä» sessionStorage æ¢å¤ç­”æ¡ˆ
    const savedAnswer = sessionStorage.getItem(storageKey || '');

    if (savedAnswer) {
      // å·²ç­”é¢˜è¿‡ï¼Œé”å®šç•Œé¢
      lockExercise(savedAnswer);
    }

    // ä¸ºæ¯ä¸ªé€‰é¡¹æ·»åŠ ç‚¹å‡»äº‹ä»¶
    options.forEach(option => {
      const optElement = option as HTMLLIElement;
      optElement.addEventListener('click', () => {
        // å¦‚æœå·²ç­”é¢˜ï¼Œå¿½ç•¥ç‚¹å‡»
        if (sessionStorage.getItem(storageKey || '')) {
          return;
        }

        const selectedOption = optElement.dataset.option;
        if (!selectedOption) return;

        // ä¿å­˜åˆ° sessionStorageï¼ˆä¸€æ—¦ä¿å­˜å°±æ— æ³•æ›´æ”¹ï¼‰
        sessionStorage.setItem(storageKey || '', selectedOption);

        // é”å®šç•Œé¢
        lockExercise(selectedOption);
      });
    });

    function lockExercise(selectedOption: string) {
      const isCorrect = selectedOption === correctAnswer;

      // æ·»åŠ é”å®šç±»
      element.classList.add('is-locked');

      // ç¦ç”¨æ‰€æœ‰é€‰é¡¹çš„ç‚¹å‡»
      options.forEach(opt => {
        const optElement = opt as HTMLLIElement;
        const optLetter = optElement.dataset.option;

        // æ˜¾ç¤ºå·²é€‰ç­”æ¡ˆçš„æ ·å¼
        if (optLetter === selectedOption) {
          opt.classList.add('selected');
          if (isCorrect) {
            opt.classList.add('correct');
          } else {
            opt.classList.add('incorrect');
          }
        } else if (optLetter === correctAnswer && !isCorrect) {
          // æ˜¾ç¤ºæ­£ç¡®ç­”æ¡ˆ
          opt.classList.add('correct');
        }
      });

      // æ˜¾ç¤ºç»“æœåŒºåŸŸ
      resultSection.style.display = 'block';

      if (isCorrect) {
        resultHeader.innerHTML = '<span class="result-icon">âœ…</span> <span class="result-text">å›ç­”æ­£ç¡®ï¼</span>';
        resultHeader.className = 'result-header correct';
